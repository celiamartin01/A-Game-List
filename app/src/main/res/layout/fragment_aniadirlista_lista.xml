<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context=".fragment_aniadirlista_lista"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview_lista_juego"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:scaleType="centerCrop"
        android:src="@android:drawable/ic_menu_gallery"
        app:layout_constraintBaseline_toBottomOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/roundimageview" />

    <TextView
        android:id="@+id/tx_lista_nombre"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/armata"
        android:maxWidth="270dp"
        android:maxHeight="51dp"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:text="NOMBRE LISTA"
        android:textColor="@color/colorTerciario"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_lista_juego"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/img_lista_linea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:src="@drawable/linea"
        app:layout_constraintStart_toEndOf="@+id/imageview_lista_juego"
        app:layout_constraintTop_toBottomOf="@+id/tx_lista_nombre" />

    <TextView
        android:id="@+id/tx_lista_numjuegos"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:layout_marginTop="5dp"
        android:maxWidth="270dp"
        android:maxHeight="51dp"
        android:layout_marginStart="15dp"
        android:text="NOMBRE LISTA"
        android:textColor="@color/colorTerciario"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_lista_juego"
        app:layout_constraintTop_toBottomOf="@+id/img_lista_linea" />

    <ImageView
        android:id="@+id/img_lista_mas"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/botonflotante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/img_lista_linea"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>