<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    tools:context=".fragment_mismafranquicia_juego">

     <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/imageview_mismafranquicia_juego"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:src="@android:drawable/ic_menu_gallery"
        app:shapeAppearanceOverlay="@style/roundimageview"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBaseline_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tx_mismafranquicia_nombre_juego"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/advent_pro_semibold"
        android:maxWidth="175sp"
        android:maxHeight="38sp"
        android:text="titulo"
        android:textColor="@color/colorPrimario"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_mismafranquicia_juego"
        app:layout_constraintTop_toTopOf="@+id/imageview_mismafranquicia_juego" />

    <TextView
        android:id="@+id/tx_mismafranquicia_descrpcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:maxWidth="175sp"
        android:maxHeight="58sp"
        android:layout_marginStart="10dp"
        android:text="bhyyyyyyysssssssssssssgssssssssssssssssffffffffffffffffuuuuuuuuuufffffffsyyyyyyyyyyyyyyyyyyyyyyyyy"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_mismafranquicia_juego"
        app:layout_constraintTop_toBottomOf="@+id/tx_mismafranquicia_nombre_juego" />

    <TextView
        android:id="@+id/tx_mismafranquicia_seguir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/advent_pro"
        android:maxWidth="175sp"
        android:maxHeight="58sp"
        android:layout_marginStart="10dp"
        android:text="Continuar leyendo"
        android:textColor="@color/colorPrimario"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/imageview_mismafranquicia_juego"
        app:layout_constraintTop_toBottomOf="@+id/tx_mismafranquicia_descrpcion" />
    <Button
        android:id="@+id/btn_mismafranquicia_aniadir"
        android:layout_width="300dp"
        android:layout_height="25dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_perfil"
        android:fontFamily="@font/advent_pro_medium"
        android:text="AÃ±adir a mi lista"
        android:textAllCaps="false"
        android:textColor="@color/colorTerciario50"
        android:textSize="15sp"
        app:layout_constraintStart_toStartOf="@+id/imageview_mismafranquicia_juego"
        app:layout_constraintTop_toBottomOf="@+id/imageview_mismafranquicia_juego" />

</androidx.constraintlayout.widget.ConstraintLayout>